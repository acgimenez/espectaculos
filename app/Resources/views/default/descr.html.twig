{% extends 'base.html.twig' %}

{% block body %}
    <h1>Espectaculo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ espectaculo.id }}</td>
            </tr>
            <tr>
                <th>Nombrecito</th>
                <td>{{ espectaculo.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ espectaculo.descrpcion }}</td>
            </tr>
            <tr>
                <td><img src="{{ espectaculo.imagen }}" alt="Imagen no disponible" height="100" width="100" ></td>
            </tr>    
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('espectaculo_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('espectaculo_edit', { 'id': espectaculo.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}