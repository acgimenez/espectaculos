{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de espectadores de: {{nombre}} </h1>
    <h2 style="color:blue">Cupo restante: {{restante}}</h2>



    <table class="table">
        <thead>
            <tr>
                <th>Espectador</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for esptoesp in esptoesps %}
            <tr>
               <td>{{esptoesp.espectador}}

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('esptoesp_show', { 'id': esptoesp.id } ) }}">Eliminar</a>
                        </li>
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        {% if (restante == "0") %}
            <li>
                <a href="{{ path('esptoesp_new', { 'id': idesp } ) }}" disabled="true" style="color:grey">Agregar espectador</a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('esptoesp_new', { 'id': idesp } ) }}" >Agregar espectador</a>
            </li>
        {% endif %}

        <li>
            <a href="{{ path('espectaculo_index') }}">Volver a la lista de espectaculos</a>
        </li>
    </ul>
{% endblock %}
